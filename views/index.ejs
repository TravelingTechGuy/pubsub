<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<script src="/socket.io/socket.io.js"></script>
	<script>
		var socket = io.connect('http://localhost:3000');
		socket.on('message', function (data) {
			document.getElementById('messages').innerHTML += '<li>' + JSON.stringify(data) + '</li>';
			console.log(data);
			if(data.final) {
				socket.disconnect();
			}
		});
	</script>
  </head>
  <body>
    <h1><%= title %></h1>
    <ul id="messages"></div>
  </body>
</html>